<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmallestViolent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:switchStyle">@style/in_round_switch</item>
    </style>

    <style name="Theme.SmallestViolent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmallestViolent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SmallestViolent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="round_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:clickable">true </item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="round_btn.img_small">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:padding">19dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="in_round_switch" >
        <item name="android:thumb">@drawable/bg_switch_thumb</item>
        <item name="android:track">@drawable/bg_switch_track</item>
        <item name="android:showText">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleX">1.35</item>
        <item name="android:scaleY">1.35</item>
    </style><style name="in_round_text_switch" >
        <item name="android:thumb">@drawable/bg_switch_text_thumb</item>
        <item name="android:track">@drawable/bg_switch_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="settings_container">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">12dp</item>/
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="section_container">
        <item name="android:background">@drawable/bg_shape</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">14dp</item>
    </style>
    <style name="section_title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="input_text">
        <item name="android:background">@drawable/bg_shape</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">#BFBFBF</item>
        <item name="paddingStart">12dp</item>
        <item name="paddingEnd">12dp</item>
    </style>
    <style name="input_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>